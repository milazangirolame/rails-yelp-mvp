<h3>Restaurante <%= @restaurant.name %></h3>
<td><%= link_to 'voltar', restaurants_path%></td>
<div class ="cards">
  <div class="col-xs-6 col-md-4"">
        <h3><%= @restaurant.name %></h3>
        <h4><%= @restaurant.address %></h4>
          <% @restaurant.reviews.each do |review| %>
            <p><%= review.content %> - Nota: <%= 10.times do review.rating end %></p>
          <%end%>
        <h4><%= link_to 'atualizar', edit_restaurant_path(@restaurant)%></h4>
        <h4><%= link_to 'excluir', restaurant_path(@restaurant), method: 'delete', data: { confirm: 'tem certeza?' } %></h4>
  </div>
 </div>

