<%= form_for [@restaurant, @review] do |f| %>

  <div class='form-group'>
    <%= f.label :Estrelas %>
    <%= f.select :rating, [1,2,3,4,5], {}, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :Avaliação %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <%= f.submit 'Salvar', class: 'btn btn-block btn-primary' %>

<% end %>
